	<lhs:Shift> "<<" <rhs:Arithmetic> => AssemblyTimeValue::BinaryOperation { lhs: Box::new(lhs.clone()), rhs: Box::new(rhs.clone()), operator: BinaryOperator::LeftShift, span: source_range(lhs.source_span().into(), rhs.source_span().into())},
