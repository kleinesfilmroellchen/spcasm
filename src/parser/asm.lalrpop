ElseBlock: Vec<ProgramElement> = {
	"else" <Program>,
	<start:"elseif"> <condition:AssemblyTimeValue> <nl:"\n"> <true_block:Program> <false_block:ElseBlock> => {
		vec![ProgramElement::Directive(Directive {
			value: DirectiveValue::Conditional {
				condition,
				true_block,
