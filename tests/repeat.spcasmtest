org 0

start_label:
repeat 20
	mov a, repeatcount
endrepeat

nop_sled:
repeat $20
	nop
endrepeat
bne nop_sled ;= D0 DE

; empty repeat does not consume label
label_before_repeat:
repeat start_label
	nop
endrepeat
bne label_before_repeat ;= D0 FE

; negative repeats act like 0 but produce a warning
repeat (-2)
	nop ;= FF
endrepeat
